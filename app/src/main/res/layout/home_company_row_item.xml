<?xml version="1.0" encoding="utf-8"?>



    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/n"
            android:background="@color/baj"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/img"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"


                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/name_layout"
                android:layout_margin="5dp"

                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/car_type"
                    android:paddingLeft="10dp"
                    android:id="@+id/typeService"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                     android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"

                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark" android:textSize="17sp"

                    />
                <TextView
                    android:id="@+id/type_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="type car"
                    android:textStyle="bold"
                     android:textColor="@color/black"
                    android:textSize="17sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                     android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"

                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark" android:textSize="17sp"

                    />
                <TextView
                    android:id="@+id/car_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price car "
                     android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17sp"

                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_view"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                         android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp"

                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark" android:textSize="17sp"

                        />
                    <TextView
                        android:id="@+id/car_typeview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_view"
                         android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="17sp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/model"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/details"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userid"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/url_img"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>


